#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    Label:
        text: 'BUSCA DE DADO DE SERVIDOR MODBUS:'
    BoxLayout:
        orientation: 'horizontal'
        id: label_inputs
        Label:
            id: label_ip
            text: 'IP:'
        Label:
            id: label_port
            text: 'Port:'
        Label:
            id: label_address
            text: 'Address:'
    BoxLayout:
        orientation: 'horizontal'
        id: box_inputs
        TextInput:
            id: input_ip
            hint_text:'Enter text'
            size_hint: 0.95, 0.5
        TextInput:
            id: input_port
            hint_text:'Enter text'
            size_hint: 0.95, 0.5
        TextInput:
            id: input_address
            hint_text:'Enter text'
            size_hint: 0.95, 0.5
    Label:
        text: 'Tipo de dado desejado:'
    BoxLayout:
        orientation: 'horizontal'
        id: buttons_inputs
        ToggleButton:
            id: bt_coil
            text: 'Coil'
            group: 'geometry'
            on_press: root.toggle_change('coil')
        ToggleButton:
            id: bt_di
            text: 'Discrete Input'
            group: 'geometry'
            on_press: root.toggle_change('di')
        ToggleButton:
            id: bt_ir
            text: 'Input Register'
            group: 'geometry'
            on_press: root.toggle_change('ir')
        ToggleButton:
            id: bt_hr
            text: 'Holding Register'
            group: 'geometry'
            on_press: root.toggle_change('hr')
    BoxLayout:
        orientation: 'horizontal'
        id: bottom_box
        BoxLayout:
            orientation: 'vertical'
            id: left_box
            Label:
                text: 'Leitura contínua:'
            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                color:.294, .761, .623
        BoxLayout:
            id: mid_box
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Conectar ao'
                Label:
                    text: 'servidor:'
                Button:
                    text: 'Connect'
                    on_press: root.connect_server()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Aplicar o'
                Label:
                    text: 'endereço:'
                Button:
                    text: 'Apply'
                    on_press: root.apply_address()
        BoxLayout:
            orientation: 'vertical'
            id: right_box
            Label:
                text: 'Output:'
            Label:
                id: output
                text: 'yeye'
                bold: True
                color: 1,0,0,1
            Label:
                text: 'Bit count:'
            Label:
                id: bit_count
                text: 'yeye'
                bold: True
                color: 1,0,0,1
