#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    Label:
        id: visor
        text: '0'
        size_hint: (1,0.1)
    GridLayout:
        id: mid_box
        cols: 4
        size_hint: (1,0.72)
        Button:
            id: bt_sete
            text: '7'
            on_press: root.changelb(7)
        Button:
            id: bt_oito
            text: '8'
            on_press: root.changelb(8)
        Button:
            id: bt_nove
            text: '9'
            on_press: root.changelb(9)
        Button:
            id: bt_mais
            text: '+'
            on_press: root.changelb('+')
        Button:
            id: bt_quatro
            text: '4'
            on_press: root.changelb(4)
        Button:
            id: bt_cinco
            text: '5'
            on_press: root.changelb(5)
        Button:
            id: bt_seis
            text: '6'
            on_press: root.changelb(6)
        Button:
            id: bt_menos
            text: '-'
            on_press: root.changelb('-')
        Button:
            id: bt_um
            text: '1'
            on_press: root.changelb(1)
        Button:
            id: bt_dois
            text: '2'
            on_press: root.changelb(2)
        Button:
            id: bt_tres
            text: '3'
            on_press: root.changelb(3)
        Button:
            id: bt_vezes
            text: '*'
            on_press: root.changelb('*')
        Button:
            id: bt_cancel
            text: 'C'
            on_press: root.changelb('c')
        Button:
            id: bt_zero
            text: '0'
            on_press: root.changelb(0)
        Button:
            id: bt_delete
            text: 'DEL'
            on_press: root.changelb('del')
        Button:
            id: bt_dividido
            text: '/'
            on_press: root.changelb('/')
    BoxLayout:
        orientation: 'horizontal'
        id: lower_box
        size_hint: (1,0.18)
        Button:
            id: bt_igual
            text: '='
            size_hint: (0.75,1)
            on_press: root.changelb('=')
        Button:
            id: bt_ponto
            text: '.'
            size_hint: (0.25,1)
            on_press: root.changelb('.')
